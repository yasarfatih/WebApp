@model IEnumerable<Tugce.Domain.POCO.Product>


@Html.Partial("_Navigation")


<section id="content">
    <div class="container">
        <div class="row">
            <div class="span12">

                @{
                    foreach (var product in Model)
                    {
                        <article>
                            <div class="row">
                                <div class="span12">
                                    <div class="post-image">
                                        <div class="post-heading">
                                            <h3><a href="#">@product.ProductName</a></h3>
                                        </div>
                                        <img src="~/Content/product/thumb/@product.FileName"
                                             alt="@product.ProductName" />
                                    </div>
                                    <p>
                                        @Html.Raw(product.Description)
                                    </p>
                                    <div class="bottom-article">
                                        <ul class="meta-post">
                                            <li><i class="icon-calendar"></i><a href="#">@product.LastUpDate.ToString("dd.MM.yyyy")</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </article>
                    }
                }


            </div>
        </div>
    </div>
</section>

