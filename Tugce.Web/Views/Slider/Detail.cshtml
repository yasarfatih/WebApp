@model Tugce.Domain.POCO.Slider

@{
    ViewBag.Title = Model.Title;
}

@Html.Partial("_Navigation");

<section id="content">
    <div class="container">
        <div class="row">
            <div class="span6">
                <h2>@Model.Title</h2>
                <p>
                   @Model.Detail
                </p>
            </div>
            <div class="span6">
                <!-- start flexslider -->
                <div class="flexslider">
                    <ul class="slides">
                        <li>
                            <img src="~/Content/slider/@Model.FileName" alt="@Model.Title.ParseStringToFormalUrl()" />
                        </li>
                        <li>
                            <img src="~/Content/slider/@Model.FileName" alt="@Model.Title.ParseStringToFormalUrl()" />
                        </li>
                        <li>
                            <img src="~/Content/slider/@Model.FileName" alt="@Model.Title.ParseStringToFormalUrl()" />
                        </li>
                    </ul>
                </div>
                <!-- end flexslider -->
            </div>
        </div>
        <!-- divider -->
        <div class="row">
            <div class="span12">
                <div class="solidline">
                </div>
            </div>
        </div>
        <!-- end divider -->
    </div>
</section>
